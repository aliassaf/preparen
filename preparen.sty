\NeedsTeXFormat{LaTeX2e}

\ProvidesPackage{preparen}[
  2014/10/14 version 1.1 Pretty-printing precedence parentheses]

\RequirePackage{ifthen}

\def\preparen@requiredlevel{0}

%% Require level to be at least #1 in expression #2
\newcommand{\requirelevel}[2]{
  {\def\preparen@requiredlevel{#1}#2}}

%% Surround expression #2 by parentheses if #1 is less than the current
%% required level
\newcommand{\protectlevel}[2]{
  \ifthenelse{#1 < \preparen@requiredlevel}{
    \left(#2\right)}{
    #2}}

\endinput

